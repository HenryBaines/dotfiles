#!/bin/bash

# check and removed orphaned packages with pacman only
sudo pacman -Qtdq | sudo pacman -Rns - 2> /tmp/cleanScriptDump

# check and remove orphaned packages
# yay -Qtdq | yay -Rns - 2> /tmp/cleanScriptDump

# check and removed dropped packages with pacman only
sudo pacman -Qqd | sudo pacman -Rsu - 2> /tmp/cleanScriptDump

# check and remove dropped packages
# yay -Qqd | yay -Rsu - 2> /tmp/cleanScriptDump

# clean older packages versions in /var/cache/pacman/pkg/, leave most recent three
sudo paccache -r #2> /tmp/cleanScriptDump

